{
  "id": "com.eufylife.security",
  "version": "0.8.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "brandColor": "#2a6185",
  "name": {
    "en": "Eufy Security"
  },
  "description": {
    "en": "Add support for Eufy Cam"
  },
  "category": [
    "security"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Martijn Poppen",
    "email": "eufy@martijnpoppen.nl"
  },
  "contributors": {
    "developers": [
      {
        "name": "Martijn Poppen",

  "homeyCommunityTopicId": 30479,
  "support": "mailto:eufy@martijnpoppen.nl",
  "flow": {
    "triggers": [
      {
        "id": "trigger_NTFY_BACKGROUND_ACTIVE",
        "title": {
          "en": "Background movement Detected",
          "nl": "Achtergrond Beweging Gedecteerd"
        },
        "args": [
            {
              "name": "device_EUFY_CAM",
              "type": "device",
              "filter": "driver_id=driver_EUFY_CAM"
            }
          ]
      },
      {
        "id": "trigger_NTFY_MOTION_DETECTION",
        "title": {
          "en": "Motion Detected",
          "nl": "Beweging Gedecteerd"
        },
        "args": [
            {
              "name": "device_EUFY_CAM",
              "type": "device",
              "filter": "driver_id=driver_EUFY_CAM"
            }
          ]
      },
      {
        "id": "trigger_NTFY_FACE_DETECTION",
        "title": {
          "en": "Face Detected",
          "nl": "Gezicht Gedecteerd"
        },
        "args": [
            {
              "name": "device_EUFY_CAM",
              "type": "device",
              "filter": "driver_id=driver_EUFY_CAM"
            }
          ]
      },
      {
        "id": "trigger_NTFY_PRESS_DOORBELL",
        "title": {
          "en": "Doorbell Press Detected",
          "nl": "Deurbel Druk Gedecteerd"
        },
        "args": [
            {
              "name": "device_EUFY_CAM",
              "type": "device",
              "filter": "driver_id=driver_EUFY_CAM"
            }
          ]
      },
      {
        "id": "trigger_NTFY_CRYING_DETECTED",
        "title": {
          "en": "Crying Detected",
          "nl": "Huilen Gedecteerd"
        },
        "args": [
            {
              "name": "device_EUFY_CAM",
              "type": "device",
              "filter": "driver_id=driver_EUFY_CAM"
            }
          ]
      },
      {
        "id": "trigger_NTFY_SOUND_DETECTED",
        "title": {
          "en": "Sound Detected",
          "nl": "Geluid Gedecteerd"
        },
        "args": [
            {
              "name": "device_EUFY_CAM",
              "type": "device",
              "filter": "driver_id=driver_EUFY_CAM"
            }
          ]
      },
      {
        "id": "trigger_NTFY_PET_DETECTED",
        "title": {
          "en": "Pet Detected",
          "nl": "Huisdier Gedecteerd"
        },
        "args": [
            {
              "name": "device_EUFY_CAM",
              "type": "device",
              "filter": "driver_id=driver_EUFY_CAM"
            }
          ]
      }
    ],
    "actions": [
      {
        "id": "action_CMD_DEVS_SWITCH",
        "title": {
          "en": "On/Off",
          "nl": "Aan/Uit"
        },
        "args": [
          {
            "name": "devicelist",
            "type": "autocomplete",
            "placeholder": {
              "en": "Choose a device",
              "nl": "Kies een apparaat"
            }
          },
          {
            "name": "CMD_DEVS_SWITCH",
            "type": "dropdown",
            "values": [
              {
                "id": "0",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              },
              {
                "id": "1",
                "label": {
                  "en": "On",
                  "nl": "Aan"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "action_CMD_SET_ARMING",
        "title": {
          "en": "Set Arm Mode",
          "nl": "Stel beveiligingsmodus in"
        },
        "args": [
          {
            "name": "CMD_SET_ARMING",
            "type": "dropdown",
            "values": [
              {
                "id": "1",
                "label": {
                  "en": "Home",
                  "nl": "Home"
                }
              },
              {
                "id": "0",
                "label": {
                  "en": "Away",
                  "nl": "Away"
                }
              },
              {
                "id": "2",
                "label": {
                  "en": "Schedule",
                  "nl": "Schedule"
                }
              },
              {
                "id": "63",
                "label": {
                  "en": "Disarmed",
                  "nl": "Disarmed"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "drivers": [
    {
        "id": "driver_EUFY_CAM",
        "class": "camera",
        "capabilities": ["onoff"],
        "name": {
          "en": "Eufy Cam",
          "nl": "Eufy Cam"
        },
        "images": {
          "large": "assets/images/large.png",
          "small": "assets/images/small.png"
        },
        "pair": [
          {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
              "next": "add_devices"
            }
          },
          {
            "id": "add_devices",
            "template": "add_devices"
          }
        ]
    }
  ]
}